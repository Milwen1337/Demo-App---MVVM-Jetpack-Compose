<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="200"
    android:enterFadeDuration="200">
    <item
        android:state_enabled="false"
        android:alpha="0.4"
        android:color="@color/main_color"
        />
    <item
        android:state_pressed="true"
        android:alpha="0.7"
        android:color="@color/main_color"
        />
    <item
        android:alpha="1"
        android:color="@color/main_color"/>
</selector>